{
  "cluster_policy": {
    "policy_id": "bmad-cluster-policy",
    "name": "BMAD Cluster Policy",
    "description": "Cluster policy for BMAD clusters",
    "definition": {
      "spark_version": {
        "type": "fixed",
        "value": "11.3.x-scala2.12"
      },
      "node_type_id": {
        "type": "fixed",
        "value": "i3.xlarge"
      },
      "autotermination_minutes": {
        "type": "fixed",
        "value": 120
      },
      "enable_elastic_disk": {
        "type": "fixed",
        "value": true
      },
      "min_workers": {
        "type": "range",
        "min_value": 2,
        "max_value": 100,
        "default_value": 2
      },
      "max_workers": {
        "type": "range",
        "min_value": 2,
        "max_value": 100,
        "default_value": 10
      },
      "aws_attributes.instance_profile_arn": {
        "type": "fixed",
        "value": "<YOUR_INSTANCE_PROFILE_ARN>"
      }
    },
    "max_clusters_per_user": 5
  }
}
